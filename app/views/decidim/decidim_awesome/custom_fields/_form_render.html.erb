<div class="decidim_awesome-custom_fields <%= name %>">
  <% if name == :private_body %>
    <p class="private_body-disclosure help-text"><%= t("help.proposal_private_custom_fields_disclosure", scope: "decidim.decidim_awesome.admin.config.form") %></p>
  <% end %>
  <div class="proposal_custom_field proposal_custom_field--<%= name %><%= spec.empty? ? " proposal_custom_field--empty" : "" %>" id="proposal-custom-field-<%= name %>" data-spec="<%= spec.to_json %>" data-editor-options="<%= editor_options[:editor].to_json %>" data-name="<%= "#{form.object_name}[#{name}]" %>">
    <div class="loading-spinner"></div>
  </div>
</div>

<%= editor_upload.html_safe %>
<%= form.hidden_field name %>
<%= form.error_for name %>
