<%= decidim_form_for(@form, url: constraint_path, method: :patch, remote: true) do |f| %>
  <div data-dialog-container>
    <%= icon "lock-line" %>
    <h2 tabindex="-1" data-dialog-title><%= t ".constraint" %></h2>
    <div class="card">
      <div class="card-section">
        <%= render partial: "form", object: f %>
      </div>
    </div>
  </div>

  <div class="button--double form-general-submit" data-dialog-actions>
    <%= f.submit t(".save") %>
  </div>
<% end %>
