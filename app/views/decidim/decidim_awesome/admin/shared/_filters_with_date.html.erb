<div class="filters__section">
  <div class="fcell">
    <div class="relative">
      <% dropdown_id = "filters-#{SecureRandom.uuid}" %>
      <a href="#" class="button button__xs button__transparent-secondary" data-controller="dropdown" data-target="dropdown-filters-<%= dropdown_id %>">
        <%= t("filter_label", scope: "decidim.admin.filters") %>
        <%= icon "arrow-down-s-line", class: "dropdown-filter-icon" %>
      </a>
      <%= dropdown_submenu(submenu_options_tree(i18n_ctx), dropdown_id) %>
    </div>
  </div>

  <div class="fcell search">
    <%= search_form_for(query, url: url_for, html: { class: "form form-defaults" }) do |form| %>
      <%= hidden_field_tag :admins, params[:admins] %>
      <div class="form__wrapper">
        <div class="card">
          <div class="card-section">
            <div class="grid grid-cols-4 p-4 pb-0 gap-x-4">
              <div class="row column">
                <%= form.search_field(
                      search_field_predicate,
                      class: "input-group-field",
                      placeholder: t("decidim.search.term_input_placeholder"),
                      label: t("decidim.search.term_input_placeholder")
                    ) %>
              </div>
              <div class="row column">
                <%= form.date_field(:created_at_gteq,
                                    class: "input-group-field",
                                    label: t("search_field_start_date", scope: "decidim.admin.filters.label")) %>
              </div>
              <div class="row column">
                <%= form.date_field(:created_at_lteq,
                                    class: "input-group-field",
                                    label: t("search_field_end_date", scope: "decidim.admin.filters.label")) %>
              </div>
              <div class="row column flex items-end">
                <button type="submit" class="button button__sm button__secondary w-full" aria-label="<%= t("decidim.search.term_input_placeholder") %>">
                  <%= icon "search-line", class: "!fill-white w-4 h-4" %>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="fcell grid-x" data-applied-filters-tags>
  <%= applied_filters_tags(i18n_ctx) %>
</div>
